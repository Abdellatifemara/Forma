          "ar": ["مكسرات", "بذور", "شوكولاتة غامقة", "خضروات ورقية"]
        },
        "deficiencySymptoms": {
          "en": ["Muscle twitches/cramps", "Poor sleep", "Fatigue", "Anxiety"],
          "ar": ["ارتعاش/تقلصات عضلية", "نوم سيء", "إرهاق", "قلق"]
        }
      },
      {
        "name": { "en": "Calcium", "ar": "كالسيوم" },
        "function": {
          "en": "Bone health, muscle contraction, nerve signaling",
          "ar": "صحة العظام، انقباض العضلات، إشارات الأعصاب"
        },
        "lostInSweat": "Low",
        "dailyNeed": "1000-1200mg",
        "sources": {
          "en": ["Dairy", "Fortified milk alternatives", "Sardines", "Broccoli"],
          "ar": ["ألبان", "بدائل الحليب المدعمة", "سردين", "بروكلي"]
        },
        "deficiencySymptoms": {
          "en": ["Muscle cramps", "Numbness", "Brittle bones", "Fatigue"],
          "ar": ["تقلصات عضلية", "تنميل", "هشاشة العظام", "إرهاق"]
        }
      }
    ],
