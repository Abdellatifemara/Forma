      "title": {
        "en": "Urine Color Chart",
        "ar": "مخطط لون البول"
      },
      "colors": [
        {
          "color": { "en": "Clear/Pale Yellow", "ar": "صافي/أصفر فاتح" },
          "status": { "en": "Well hydrated", "ar": "مرتوي كويس" }
        },
        {
          "color": { "en": "Light Yellow", "ar": "أصفر فاتح" },
          "status": { "en": "Good hydration", "ar": "ترطيب كويس" }
        },
        {
          "color": { "en": "Yellow", "ar": "أصفر" },
          "status": { "en": "Drink some water soon", "ar": "اشرب ميه قريب" }
        },
        {
          "color": { "en": "Dark Yellow", "ar": "أصفر غامق" },
          "status": { "en": "Dehydrated - drink now", "ar": "جاف - اشرب دلوقتي" }
        },
        {
          "color": { "en": "Amber/Brown", "ar": "كهرماني/بني" },
          "status": { "en": "Severely dehydrated", "ar": "جفاف شديد" }
        }
      ]
    }
  },
  "electrolytes": {
    "title": {
      "en": "Understanding Electrolytes",
      "ar": "فهم الإلكتروليتات"
    },
    "what": {
      "en": "Electrolytes are minerals that conduct electricity in your body. They regulate nerve and muscle function, hydration, and pH balance.",
      "ar": "الإلكتروليتات هي معادن بتوصل الكهرباء في جسمك. بتنظم وظيفة الأعصاب والعضلات والترطيب وتوازن pH."
    },
    "mainElectrolytes": [
      {
        "name": { "en": "Sodium", "ar": "صوديوم" },
        "function": {
          "en": "Fluid balance, nerve function, muscle contraction",
          "ar": "توازن السوائل، وظيفة الأعصاب، انقباض العضلات"
        },
        "lostInSweat": "High",
        "dailyNeed": "2300mg (less if inactive, more if athletic)",
        "sources": {
          "en": ["Table salt", "Sports drinks", "Pickles", "Cheese"],
          "ar": ["ملح الطعام", "مشروبات رياضية", "مخللات", "جبنة"]
        },
        "deficiencySymptoms": {
          "en": ["Muscle cramps", "Headache", "Nausea", "Confusion"],
          "ar": ["تقلصات عضلية", "صداع", "غثيان", "ارتباك"]
        }
      },
      {
        "name": { "en": "Potassium", "ar": "بوتاسيوم" },
        "function": {
          "en": "Heart rhythm, muscle function, nerve signals",
          "ar": "إيقاع القلب، وظيفة العضلات، إشارات الأعصاب"
        },
        "lostInSweat": "Moderate",
        "dailyNeed": "3500-4700mg",
        "sources": {
          "en": ["Bananas", "Potatoes", "Spinach", "Coconut water"],
          "ar": ["موز", "بطاطس", "سبانخ", "ميه جوز الهند"]
