  "introduction": {
    "title": {
      "en": "Complete Cardio Training Guide",
      "ar": "دليل تدريب الكارديو الشامل"
    },
    "description": {
      "en": "Cardio (cardiovascular exercise) improves heart health, burns calories, and supports recovery. Understanding different types helps you choose the right approach for your goals.",
      "ar": "الكارديو (تمارين القلب والأوعية الدموية) بيحسن صحة القلب، بيحرق سعرات، وبيدعم الاستشفاء. فهم الأنواع المختلفة بيساعدك تختار النهج الصح لأهدافك."
    }
  },
  "cardioTypes": {
    "title": {
      "en": "Types of Cardio Training",
      "ar": "أنواع تدريب الكارديو"
    },
    "types": [
      {
        "id": "liss",
        "name": {
          "en": "LISS (Low-Intensity Steady State)",
          "ar": "LISS (منخفض الشدة ثابت)"
        },
        "description": {
          "en": "Long duration, low intensity cardio. You should be able to hold a conversation.",
          "ar": "كارديو طويل المدة، منخفض الشدة. لازم تقدر تتكلم عادي."
        },
        "heartRateZone": "50-65% max HR",
        "duration": "30-60 minutes",
        "examples": {
          "en": ["Walking", "Light cycling", "Swimming (easy pace)", "Elliptical (low resistance)"],
          "ar": ["المشي", "عجلة خفيفة", "سباحة (سرعة سهلة)", "إليبتيكال (مقاومة خفيفة)"]
        },
        "benefits": {
          "en": [
            "Burns fat while preserving muscle",
            "Good for recovery days",
            "Low stress on joints and CNS",
            "Easy to do while watching TV or reading",
            "Great for beginners"
          ],
          "ar": [
            "بيحرق دهون مع الحفاظ على العضلات",
            "كويس لأيام الاستشفاء",
            "ضغط قليل على المفاصل والجهاز العصبي",
            "سهل تعمله وإنت بتتفرج على التلفزيون أو بتقرأ",
            "ممتاز للمبتدئين"
          ]
        },
        "drawbacks": {
          "en": [
            "Takes more time",
            "Can be boring",
            "Less effective for conditioning"
          ],
          "ar": [
            "بياخد وقت أكتر",
            "ممكن يكون ممل",
            "أقل فعالية للياقة"
          ]
        },
        "bestFor": {
          "en": ["Fat loss while preserving muscle", "Active recovery", "Beginners", "Those with joint issues"],
          "ar": ["خسارة الدهون مع الحفاظ على العضلات", "الاستشفاء النشط", "المبتدئين", "اللي عندهم مشاكل في المفاصل"]
        }
      },
      {
        "id": "miss",
        "name": {
          "en": "MISS (Moderate-Intensity Steady State)",
          "ar": "MISS (متوسط الشدة ثابت)"
        },
        "description": {
          "en": "Medium intensity where talking becomes difficult. Faster than walking, slower than sprinting.",
          "ar": "شدة متوسطة لما الكلام بيبقى صعب. أسرع من المشي، أبطأ من الجري السريع."
        },
        "heartRateZone": "65-75% max HR",
        "duration": "20-45 minutes",
        "examples": {
          "en": ["Jogging", "Moderate cycling", "Rowing", "Stair climber"],
          "ar": ["جري خفيف", "عجلة متوسطة", "تجديف", "درج"]
        },
        "benefits": {
          "en": [
            "Good calorie burn in shorter time than LISS",
            "Improves aerobic capacity",
            "Balance between fat burning and conditioning"
          ],
          "ar": [
            "حرق سعرات كويس في وقت أقصر من LISS",
            "بيحسن القدرة الهوائية",
            "توازن بين حرق الدهون واللياقة"
          ]
        },
        "drawbacks": {
          "en": [
            "More demanding than LISS",
            "Not as efficient for conditioning as HIIT"
          ],
          "ar": [
            "أصعب من LISS",
            "مش فعال زي HIIT للياقة"
          ]
        },
        "bestFor": {
          "en": ["General fitness", "Moderate fat loss", "Building aerobic base"],
          "ar": ["اللياقة العامة", "خسارة دهون معتدلة", "بناء قاعدة هوائية"]
        }
      },
      {
        "id": "hiit",
        "name": {
          "en": "HIIT (High-Intensity Interval Training)",
          "ar": "HIIT (تدريب متقطع عالي الشدة)"
        },
        "description": {
          "en": "Short bursts of all-out effort followed by rest periods. Very demanding but very effective.",
          "ar": "دفعات قصيرة من المجهود الأقصى متبوعة بفترات راحة. متطلب جداً بس فعال جداً."
        },
        "heartRateZone": "80-95% max HR during work",
        "duration": "15-25 minutes total",
        "examples": {
          "en": ["Sprints", "Battle ropes", "Bike sprints", "Burpees", "Box jumps"],
          "ar": ["جري سريع", "حبال المعركة", "سبرنتات عجلة", "بيربيز", "قفز على الصندوق"]
        },
        "benefits": {
          "en": [
            "Maximum calorie burn in minimum time",
            "EPOC (afterburn effect) - burn calories for hours after",
            "Improves both aerobic and anaerobic capacity",
            "Increases metabolism",
            "Time efficient"
          ],
          "ar": [
            "أقصى حرق سعرات في أقل وقت",
            "EPOC (تأثير ما بعد الحرق) - بتحرق سعرات لساعات بعدها",
            "بيحسن القدرة الهوائية واللاهوائية",
            "بيزود الأيض",
            "موفر للوقت"
          ]
        },
        "drawbacks": {
          "en": [
            "Very demanding - hard to recover from",
            "Can interfere with muscle gains if overdone",
            "Requires good fitness base",
            "Higher injury risk",
            "Not for every day"
          ],
          "ar": [
            "متطلب جداً - صعب تستشفي منه",
            "ممكن يأثر على اكتساب العضلات لو زودته",
            "محتاج قاعدة لياقة كويسة",
            "خطر إصابة أعلى",
            "مش لكل يوم"
          ]
        },
        "bestFor": {
          "en": ["Busy people", "Advanced trainees", "Maximizing conditioning", "Breaking plateaus"],
          "ar": ["الناس المشغولة", "المتدربين المتقدمين", "أقصى لياقة", "كسر الثبات"]
        }
      },
      {
        "id": "sic",
        "name": {
          "en": "SIT (Sprint Interval Training)",
          "ar": "SIT (تدريب متقطع سريع)"
        },
        "description": {
          "en": "True all-out sprints with full recovery. Maximum intensity, maximum rest.",
          "ar": "سبرنتات بأقصى مجهود مع استشفاء كامل. أقصى شدة، أقصى راحة."
        },
        "heartRateZone": "95-100% max HR during sprint",
        "duration": "10-20 minutes total",
        "protocol": {
          "en": "20-30 second all-out sprint, 2-4 minute rest, repeat 4-6 times",
          "ar": "20-30 ثانية سبرنت بأقصى مجهود، 2-4 دقيقة راحة، كرر 4-6 مرات"
        },
        "bestFor": {
          "en": ["Athletes", "Power development", "Breaking plateaus"],
          "ar": ["الرياضيين", "تطوير القوة", "كسر الثبات"]
        }
      }
    ]
  },
  "heartRateZones": {
    "title": {
      "en": "Heart Rate Training Zones",
      "ar": "مناطق تدريب نبض القلب"
    },
    "howToCalculate": {
      "en": "Max HR (estimated) = 220 - your age. Then calculate percentage of that number.",
      "ar": "أقصى نبض (تقديري) = 220 - عمرك. وبعدين احسب النسبة من الرقم ده."
    },
    "example": {
      "en": "30 year old: Max HR = 190. Zone 3 (70-80%) = 133-152 bpm",
      "ar": "عمر 30 سنة: أقصى نبض = 190. المنطقة 3 (70-80%) = 133-152 نبضة/دقيقة"
    },
    "zones": [
      {
        "zone": 1,
        "name": {
          "en": "Recovery Zone",
          "ar": "منطقة الاستشفاء"
        },
        "percentage": "50-60%",
        "description": {
          "en": "Very light activity. Promotes blood flow and recovery. Walking pace.",
          "ar": "نشاط خفيف جداً. بيعزز تدفق الدم والاستشفاء. سرعة المشي."
        },
        "feeling": {
          "en": "Can talk easily, barely sweating",
          "ar": "تقدر تتكلم بسهولة، بالكاد بتعرق"
        }
      },
      {
        "zone": 2,
        "name": {
          "en": "Fat Burning Zone",
          "ar": "منطقة حرق الدهون"
        },
        "percentage": "60-70%",
        "description": {
          "en": "Light aerobic exercise. Primary fuel source is fat. Sustainable for long periods.",
          "ar": "تمرين هوائي خفيف. مصدر الوقود الأساسي الدهون. ممكن تستمر لفترات طويلة."
        },
        "feeling": {
          "en": "Can hold a conversation, light sweat",
          "ar": "تقدر تتكلم، عرق خفيف"
        }
      },
      {
        "zone": 3,
        "name": {
          "en": "Aerobic Zone",
          "ar": "المنطقة الهوائية"
        },
        "percentage": "70-80%",
        "description": {
          "en": "Moderate intensity. Improves cardiovascular fitness. Mix of fat and carbs for fuel.",
          "ar": "شدة معتدلة. بتحسن لياقة القلب والأوعية. مزيج من الدهون والكربوهيدرات للوقود."
        },
        "feeling": {
          "en": "Breathing harder, can speak in short sentences",
          "ar": "تنفس أصعب، تقدر تتكلم بجمل قصيرة"
        }
      },
      {
        "zone": 4,
        "name": {
          "en": "Anaerobic Zone",
          "ar": "المنطقة اللاهوائية"
        },
        "percentage": "80-90%",
        "description": {
          "en": "High intensity. Improves speed and power. Cannot sustain for long.",
          "ar": "شدة عالية. بتحسن السرعة والقوة. مش هتقدر تستمر طويلاً."
        },
        "feeling": {
          "en": "Breathing very hard, can only say a few words",
          "ar": "تنفس صعب جداً، بتقدر تقول كلمات قليلة بس"
        }
      },
      {
        "zone": 5,
        "name": {
          "en": "Maximum Effort Zone",
          "ar": "منطقة المجهود الأقصى"
        },
        "percentage": "90-100%",
        "description": {
          "en": "All-out effort. Only sustainable for short bursts. Builds maximum power.",
          "ar": "أقصى مجهود. ممكن تستمر لدفعات قصيرة بس. بتبني أقصى قوة."
        },
        "feeling": {
          "en": "Cannot talk, gasping for air, maximum effort",
          "ar": "مش هتقدر تتكلم، بتلهث، أقصى مجهود"
        }
      }
    ]
  },
