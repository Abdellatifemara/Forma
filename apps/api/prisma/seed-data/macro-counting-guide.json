    "calculating_your_macros": {
      "title": {
        "en": "How to Calculate Your Macros",
        "ar": "إزاي تحسب ماكروزك"
      },
      "step_1": {
        "title": {
          "en": "Step 1: Calculate Your TDEE (Total Daily Energy Expenditure)",
          "ar": "الخطوة 1: احسب الـ TDEE (إجمالي الطاقة اليومية المصروفة)"
        },
        "method": {
          "en": "Use the Mifflin-St Jeor equation for BMR, then multiply by activity factor",
          "ar": "استخدم معادلة ميفلين-سانت جور للـ BMR، بعدين اضرب في عامل النشاط"
        },
        "bmr_formula": {
          "men": {
            "en": "BMR = (10 × weight in kg) + (6.25 × height in cm) - (5 × age) + 5",
            "ar": "BMR = (10 × الوزن بالكيلو) + (6.25 × الطول بالسم) - (5 × العمر) + 5"
          },
          "women": {
            "en": "BMR = (10 × weight in kg) + (6.25 × height in cm) - (5 × age) - 161",
            "ar": "BMR = (10 × الوزن بالكيلو) + (6.25 × الطول بالسم) - (5 × العمر) - 161"
          }
        },
        "activity_multipliers": [
          {
            "level": {
              "en": "Sedentary (desk job, little exercise)",
              "ar": "خامل (شغل مكتب، تمرين قليل)"
            },
            "multiplier": 1.2
          },
          {
            "level": {
              "en": "Lightly Active (light exercise 1-3 days/week)",
              "ar": "نشط قليلاً (تمرين خفيف 1-3 أيام/أسبوع)"
            },
            "multiplier": 1.375
          },
          {
            "level": {
              "en": "Moderately Active (moderate exercise 3-5 days/week)",
              "ar": "نشط باعتدال (تمرين معتدل 3-5 أيام/أسبوع)"
            },
            "multiplier": 1.55
          },
          {
            "level": {
              "en": "Very Active (hard exercise 6-7 days/week)",
              "ar": "نشط جداً (تمرين شديد 6-7 أيام/أسبوع)"
            },
            "multiplier": 1.725
          },
          {
            "level": {
              "en": "Extremely Active (very hard exercise + physical job)",
              "ar": "نشط للغاية (تمرين شديد جداً + شغل بدني)"
            },
            "multiplier": 1.9
          }
        ],
        "example": {
          "en": "80kg man, 175cm, 30 years old, moderately active: BMR = (10×80) + (6.25×175) - (5×30) + 5 = 1,799 kcal. TDEE = 1,799 × 1.55 = 2,788 kcal",
          "ar": "راجل 80 كيلو، 175 سم، 30 سنة، نشط باعتدال: BMR = (10×80) + (6.25×175) - (5×30) + 5 = 1,799 سعرة. TDEE = 1,799 × 1.55 = 2,788 سعرة"
        }
      },
      "step_2": {
        "title": {
          "en": "Step 2: Adjust for Your Goal",
          "ar": "الخطوة 2: عدّل حسب هدفك"
        },
        "goals": [
          {
            "goal": {
              "en": "Fat Loss",
              "ar": "خسارة دهون"
            },
            "adjustment": {
              "en": "TDEE - 300 to 500 calories (moderate deficit)",
              "ar": "TDEE - 300 لـ 500 سعرة (عجز معتدل)"
            },
            "rate": {
              "en": "Aim for 0.5-1% of bodyweight loss per week",
              "ar": "استهدف 0.5-1% من وزن الجسم خسارة في الأسبوع"
            }
          },
          {
            "goal": {
              "en": "Maintenance",
              "ar": "الحفاظ"
            },
            "adjustment": {
              "en": "Eat at TDEE",
              "ar": "كل على الـ TDEE"
            }
          },
          {
            "goal": {
              "en": "Muscle Gain (Lean Bulk)",
              "ar": "بناء عضل (تضخيم نظيف)"
            },
            "adjustment": {
              "en": "TDEE + 200 to 300 calories (small surplus)",
              "ar": "TDEE + 200 لـ 300 سعرة (فائض صغير)"
            },
            "rate": {
              "en": "Aim for 0.25-0.5% of bodyweight gain per week",
              "ar": "استهدف 0.25-0.5% من وزن الجسم زيادة في الأسبوع"
            }
          },
          {
            "goal": {
              "en": "Aggressive Bulk",
              "ar": "تضخيم قوي"
            },
            "adjustment": {
              "en": "TDEE + 500+ calories",
              "ar": "TDEE + 500+ سعرة"
            },
            "note": {
              "en": "Will gain more fat alongside muscle - only for hard gainers",
              "ar": "هتزيد دهون أكتر مع العضل - بس للي صعب يزيدوا"
            }
          }
        ]
      },
      "step_3": {
        "title": {
          "en": "Step 3: Set Your Protein",
          "ar": "الخطوة 3: حدد البروتين"
        },
        "recommendations": {
          "fat_loss": {
            "en": "2.0-2.4g per kg bodyweight (higher to preserve muscle in deficit)",
            "ar": "2.0-2.4 جرام لكل كيلو من وزن الجسم (أعلى للحفاظ على العضل في العجز)"
          },
          "maintenance": {
            "en": "1.6-2.0g per kg bodyweight",
            "ar": "1.6-2.0 جرام لكل كيلو من وزن الجسم"
          },
          "muscle_gain": {
            "en": "1.6-2.2g per kg bodyweight",
            "ar": "1.6-2.2 جرام لكل كيلو من وزن الجسم"
          }
        },
        "example": {
          "en": "80kg person cutting: 80 × 2.2 = 176g protein = 704 calories from protein",
          "ar": "شخص 80 كيلو بيقطع: 80 × 2.2 = 176 جرام بروتين = 704 سعرة من البروتين"
        }
      },
      "step_4": {
        "title": {
          "en": "Step 4: Set Your Fats",
          "ar": "الخطوة 4: حدد الدهون"
        },
        "recommendation": {
          "en": "0.7-1.2g per kg bodyweight (20-35% of calories)",
          "ar": "0.7-1.2 جرام لكل كيلو من وزن الجسم (20-35% من السعرات)"
        },
        "minimum": {
          "en": "Don't go below 0.5g/kg - hormones need fat",
          "ar": "ماتنزلش تحت 0.5 جرام/كيلو - الهرمونات محتاجة دهون"
        },
        "example": {
          "en": "80kg person: 80 × 0.8 = 64g fat = 576 calories from fat",
          "ar": "شخص 80 كيلو: 80 × 0.8 = 64 جرام دهون = 576 سعرة من الدهون"
        }
      },
      "step_5": {
        "title": {
          "en": "Step 5: Fill Remaining Calories with Carbs",
          "ar": "الخطوة 5: كمّل السعرات المتبقية بالكاربز"
        },
        "formula": {
          "en": "Remaining calories ÷ 4 = Carbs in grams",
          "ar": "السعرات المتبقية ÷ 4 = الكاربز بالجرام"
        },
        "example": {
          "en": "Target: 2,300 kcal. Protein: 704 kcal. Fat: 576 kcal. Remaining: 2,300 - 704 - 576 = 1,020 kcal ÷ 4 = 255g carbs",
          "ar": "الهدف: 2,300 سعرة. البروتين: 704 سعرة. الدهون: 576 سعرة. المتبقي: 2,300 - 704 - 576 = 1,020 سعرة ÷ 4 = 255 جرام كاربز"
        }
      },
      "summary_example": {
        "title": {
          "en": "Complete Example",
          "ar": "مثال كامل"
        },
        "scenario": {
          "en": "80kg man, cutting (TDEE 2,800, eating 2,300)",
          "ar": "راجل 80 كيلو، تنشيف (TDEE 2,800، بياكل 2,300)"
        },
        "macros": {
          "calories": "2,300 kcal",
          "protein": "176g (704 kcal)",
          "fat": "64g (576 kcal)",
          "carbs": "255g (1,020 kcal)"
        }
      }
    },
