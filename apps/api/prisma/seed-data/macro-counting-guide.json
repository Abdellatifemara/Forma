    "flexible_dieting": {
      "title": {
        "en": "Flexible Dieting (IIFYM)",
        "ar": "النظام الغذائي المرن (IIFYM)"
      },
      "concept": {
        "en": "If It Fits Your Macros - you can eat any food as long as it fits your daily macro targets. No foods are 'off limits'.",
        "ar": "لو بيدخل في ماكروزك - ممكن تاكل أي أكل طالما بيدخل في أهداف ماكروزك اليومية. مفيش أكل 'ممنوع'."
      },
      "principles": [
        {
          "principle": {
            "en": "80/20 Rule",
            "ar": "قاعدة 80/20"
          },
          "explanation": {
            "en": "80% of your food should be nutritious whole foods. 20% can be whatever you want.",
            "ar": "80% من أكلك لازم يكون أكل صحي كامل. 20% ممكن يكون أي حاجة انت عايزها."
          }
        },
        {
          "principle": {
            "en": "No Good or Bad Foods",
            "ar": "مفيش أكل كويس أو وحش"
          },
          "explanation": {
            "en": "Only appropriate or inappropriate amounts in context of your goals.",
            "ar": "فيه بس كميات مناسبة أو غير مناسبة في سياق أهدافك."
          }
        },
        {
          "principle": {
            "en": "Sustainability Over Perfection",
            "ar": "الاستدامة فوق الكمال"
          },
          "explanation": {
            "en": "A diet you can stick to beats a 'perfect' diet you quit after 2 weeks.",
            "ar": "دايت تقدر تلتزم بيه بيغلب دايت 'مثالي' بتسيبه بعد أسبوعين."
          }
        }
      ],
      "example": {
        "en": "Want pizza? Fit it into your macros. Maybe have a lighter breakfast and lunch, then enjoy pizza for dinner while still hitting your targets.",
        "ar": "عايز بيتزا؟ دخّلها في ماكروزك. يمكن تاكل فطار وغدا أخف، بعدين استمتع بالبيتزا في العشا وبرضو توصل لأهدافك."
      }
    },
    "adjusting_macros": {
      "title": {
        "en": "When and How to Adjust Your Macros",
        "ar": "إمتى وإزاي تعدّل ماكروزك"
      },
      "when_to_adjust": [
        {
          "situation": {
            "en": "Weight not changing for 2-3 weeks (and you're tracking accurately)",
            "ar": "الوزن مش بيتغير لـ 2-3 أسابيع (وانت بتتابع بدقة)"
          },
          "action": {
            "en": "Reduce calories by 100-200 (cutting) or increase by 100-200 (bulking)",
            "ar": "قلل السعرات 100-200 (تنشيف) أو زوّد 100-200 (تضخيم)"
          }
        },
        {
          "situation": {
            "en": "Losing weight too fast (>1% bodyweight/week)",
            "ar": "بتخس بسرعة زيادة (>1% من وزن الجسم/أسبوع)"
          },
          "action": {
            "en": "Add 100-200 calories, mainly from carbs",
            "ar": "ضيف 100-200 سعرة، أغلبها من الكاربز"
          }
        },
        {
          "situation": {
            "en": "Energy is very low during workouts",
            "ar": "الطاقة قليلة جداً أثناء التمارين"
          },
          "action": {
            "en": "Increase carbs, especially around workout times",
            "ar": "زوّد الكاربز، خصوصاً حوالين أوقات التمرين"
          }
        },
        {
          "situation": {
            "en": "Always hungry despite hitting macros",
            "ar": "جعان دايماً رغم إنك موصل للماكروز"
          },
          "action": {
            "en": "Swap some carbs for protein (more satiating), add more fiber",
            "ar": "بدّل بعض الكاربز ببروتين (أكتر إشباعاً)، ضيف ألياف أكتر"
          }
        }
      ],
      "what_to_adjust": {
        "en": "When adjusting calories, typically adjust carbs first (most flexible), then fats if needed. Keep protein consistent.",
        "ar": "لما تعدّل السعرات، عادةً عدّل الكاربز الأول (الأكتر مرونة)، بعدين الدهون لو لزم. خلي البروتين ثابت."
      }
    },
    "common_mistakes": {
      "title": {
        "en": "Common Macro Counting Mistakes",
        "ar": "أخطاء حساب الماكروز الشائعة"
      },
      "mistakes": [
        {
          "mistake": {
            "en": "Not Tracking Cooking Oils",
            "ar": "عدم تتبع زيوت الطبخ"
          },
          "impact": {
            "en": "1 tablespoon = 120 calories. This adds up fast.",
            "ar": "1 ملعقة كبيرة = 120 سعرة. ده بيتجمع بسرعة."
          }
        },
        {
          "mistake": {
            "en": "Weighing Cooked Instead of Raw",
            "ar": "وزن المطبوخ بدل النيء"
          },
          "impact": {
            "en": "Meat loses 25-30% weight when cooked. Database entries are usually for raw.",
            "ar": "اللحم بيخسر 25-30% من وزنه لما بيتطبخ. مدخلات قاعدة البيانات عادةً للنيء."
          }
        },
        {
          "mistake": {
            "en": "Not Counting Sauces and Dressings",
            "ar": "عدم حساب الصوصات والتتبيلات"
          },
          "impact": {
            "en": "Can add 100-300+ calories per meal",
            "ar": "ممكن تضيف 100-300+ سعرة لكل وجبة"
          }
        },
        {
          "mistake": {
            "en": "Forgetting Weekend Eating",
            "ar": "نسيان أكل الويكند"
          },
          "impact": {
            "en": "Two days of overeating can wipe out five days of deficit",
            "ar": "يومين أكل زيادة ممكن يمسحوا خمس أيام عجز"
          }
        },
        {
          "mistake": {
            "en": "Obsessing Over Daily Numbers",
            "ar": "الوسواس من الأرقام اليومية"
          },
          "solution": {
            "en": "Weekly averages matter more than hitting exact numbers daily",
            "ar": "المتوسطات الأسبوعية أهم من ضرب الأرقام بالظبط يومياً"
          }
        },
        {
          "mistake": {
            "en": "Starting Too Extreme",
            "ar": "البداية المتطرفة"
          },
          "solution": {
            "en": "Don't cut 1000 calories on day one. Start moderate and adjust.",
            "ar": "ماتقطعش 1000 سعرة من أول يوم. ابدأ معتدل وعدّل."
          }
        }
      ]
    },
    "tips_for_success": {
      "title": {
        "en": "Tips for Macro Counting Success",
        "ar": "نصائح لنجاح حساب الماكروز"
      },
      "tips": [
        {
          "en": "Meal prep to make tracking easier",
          "ar": "حضّر الوجبات عشان التتبع يكون أسهل"
        },
        {
          "en": "Have go-to meals with known macros",
          "ar": "جهّز وجبات ثابتة بماكروز معروفة"
        },
        {
          "en": "Log food BEFORE or AS you eat, not after",
          "ar": "سجّل الأكل قبل أو وانت بتاكل، مش بعد"
        },
        {
          "en": "Be patient - it gets easier with practice",
          "ar": "اصبر - بيكون أسهل مع الممارسة"
        },
        {
          "en": "Focus on hitting protein first, then fit in the rest",
          "ar": "ركز على ضرب البروتين الأول، بعدين كمّل الباقي"
        },
        {
          "en": "Don't stress about being off by 5-10g on any macro",
          "ar": "ماتقلقش من إنك غلطت بـ 5-10 جرام في أي ماكرو"
        },
        {
          "en": "Take diet breaks when needed for mental health",
          "ar": "خد استراحات من الدايت لما تحتاج للصحة النفسية"
        }
      ]
    }
  }
}
