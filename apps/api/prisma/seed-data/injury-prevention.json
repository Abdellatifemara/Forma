  "whenToSeeDoctor": {
    "title": {
      "en": "When to See a Doctor",
      "ar": "امتى تروح للدكتور"
    },
    "redFlags": [
      {
        "flag": {
          "en": "Severe pain that doesn't improve with rest",
          "ar": "ألم شديد مش بيتحسن بالراحة"
        }
      },
      {
        "flag": {
          "en": "Visible deformity or severe swelling",
          "ar": "تشوه ظاهر أو ورم شديد"
        }
      },
      {
        "flag": {
          "en": "Numbness or tingling",
          "ar": "تنميل"
        }
      },
      {
        "flag": {
          "en": "Unable to bear weight or use limb",
          "ar": "مش قادر تحمل وزن أو تستخدم الطرف"
        }
      },
      {
        "flag": {
          "en": "Pain that wakes you up at night",
          "ar": "ألم بيصحيك من النوم"
        }
      },
      {
        "flag": {
          "en": "Pop or snap sound followed by pain",
          "ar": "صوت فرقعة وبعدها ألم"
        }
      },
      {
        "flag": {
          "en": "Pain lasting more than 2 weeks",
          "ar": "ألم مستمر أكتر من أسبوعين"
        }
      },
      {
        "flag": {
          "en": "Signs of infection (redness, warmth, fever)",
          "ar": "علامات عدوى (احمرار، سخونة، حرارة)"
        }
      }
    ],
    "reminder": {
      "en": "Better to get checked early than to make an injury worse by ignoring it.",
      "ar": "أحسن تتفحص بدري من إنك تخلي الإصابة تسوء بتجاهلها."
    }
  },
  "firstAid": {
    "title": {
      "en": "RICE Protocol for Minor Injuries",
      "ar": "بروتوكول RICE للإصابات البسيطة"
    },
    "steps": [
      {
        "letter": "R",
        "name": {
          "en": "Rest",
          "ar": "راحة"
        },
        "description": {
          "en": "Stop the activity that caused the injury. Avoid putting stress on the injured area.",
          "ar": "وقف النشاط اللي سبب الإصابة. تجنب الضغط على المنطقة المصابة."
        }
      },
      {
        "letter": "I",
        "name": {
          "en": "Ice",
          "ar": "ثلج"
        },
        "description": {
          "en": "Apply ice for 15-20 minutes every 2-3 hours for the first 48-72 hours. Use a cloth between ice and skin.",
          "ar": "حط ثلج لمدة 15-20 دقيقة كل 2-3 ساعات لأول 48-72 ساعة. استخدم قماشة بين الثلج والجلد."
        }
      },
      {
        "letter": "C",
        "name": {
          "en": "Compression",
          "ar": "ضغط"
        },
        "description": {
          "en": "Wrap the injured area with an elastic bandage. Not too tight - you should be able to fit a finger underneath.",
          "ar": "لف المنطقة المصابة برباط مطاطي. مش ضيق أوي - لازم تقدر تدخل صباعك تحته."
        }
      },
      {
        "letter": "E",
        "name": {
          "en": "Elevation",
          "ar": "رفع"
        },
        "description": {
          "en": "Raise the injured area above heart level when possible. This helps reduce swelling.",
          "ar": "ارفع المنطقة المصابة فوق مستوى القلب لما تقدر. ده بيساعد يقلل الورم."
        }
      }
    ]
  }
}
